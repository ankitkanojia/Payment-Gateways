                    <ul>
                        <li><a target="_blank" href="@Url.Action("Index","PayPal")">PayPal</a></li>
                        <li><a href="@Url.Action("CyberSource","PaymentGateway")">Cyber Source</a></li>
                        <li><a href="#">CCAvenue</a></li>
                        <li><a href="#">Money POLO</a></li>
                        <li><a target="_blank" href="@Url.Action("IDT","PaymentGateway")">IDT Gateway</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
